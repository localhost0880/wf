<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Index</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        function showRecipeForm() {
            document.getElementById('recipe-form').style.display = 'block';
        }
    </script>
</head>
<body>
    <div class="book-container">
        <h1 class="book-title">ðŸ“œ Recipe Index</h1>
        
        <!-- Create Recipe Button -->
        <button class="next-button" onclick="showRecipeForm()">âž• Create Recipe</button>
        
        <!-- Recipe Form (Hidden by Default) -->
        <div id="recipe-form" style="display: none;">
            <h2>Add a New Recipe</h2>
            <form action="/add-recipe" method="POST">
                <input type="text" name="title" placeholder="Recipe Title" required><br>
                <textarea name="ingredients" placeholder="Ingredients (comma separated)" required></textarea><br>
                <textarea name="instructions" placeholder="Instructions" required></textarea><br>
                <button type="submit" class="next-button">ðŸ“Œ Save Recipe</button>
            </form>
        </div>

        <ul>
            <% recipes.forEach(recipe => { %>
                <li>
                    <a href="/recipe/<%= recipe._id %>">Recipe: <%= recipe.title %></a>
                    <!-- Delete Recipe -->
                    <form action="/delete-recipe/<%= recipe._id %>" method="POST" style="display: inline;">
                        <button type="submit" class="delete-button">ðŸ—‘ Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>

        <button class="prev-button" onclick="location.href='/'">â¬… Back to Cover</button>
    </div>
</body>
</html>

